{
    "name": "glueful/notiva",
    "description": "Push notifications for Glueful (FCM, APNs, Web Push)",
    "type": "glueful-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tawiah Sowah",
            "email": "michael@glueful.dev"
        }
    ],
    "keywords": ["notifications", "push", "fcm", "apns", "web-push"],
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "glueful/framework": "dev-main",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "${GLUEFUL_PATH}"
        }
    ],
    "homepage": "https://github.com/glueful/extensions/tree/main/extensions/notiva",
    "autoload": {
        "psr-4": {
            "Glueful\\\\Extensions\\\\Notiva\\\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glueful\\\\Extensions\\\\Notiva\\\\Tests\\\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --standard=Squiz src",
        "phpcbf": "vendor/bin/phpcbf --standard=Squiz src",
        "analyze": "vendor/bin/phpstan analyze src --level=5"
    },
    "extra": {
        "glueful": {
            "name": "Notiva",
            "displayName": "Notiva Push Notifications",
            "description": "Push notifications for Glueful (FCM, APNs, Web Push)",
            "version": "0.5.0",
            "icon": "assets/icon.png",
            "categories": ["notifications", "communication"],
            "publisher": "glueful-team",
            "provider": "Glueful\\\\Extensions\\\\Notiva\\\\NotivaServiceProvider",
            "requires": {
                "glueful": ">=1.6.1",
                "extensions": []
            }
        }
    },
    "suggest": {
        "edamov/pushok": "^1.0 for Apple Push Notification service (APNs)",
        "minishlink/web-push": "^9.0 for Web Push (VAPID)"
    },
    "config": {
        "sort-packages": true
    }
}

